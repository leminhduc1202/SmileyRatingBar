<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/white">

    <TextView
        android:id="@+id/tvWelcome"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginEnd="@dimen/dp_30"
        android:layout_marginStart="@dimen/dp_30"
        android:fontFamily="@font/ikanosans_bold"
        android:text="@string/splash_screen_7"
        android:textColor="@color/text_color_welcome"
        android:textSize="@dimen/sp40"
        android:layout_marginTop="@dimen/dimen_100dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tvContentAvatar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginEnd="@dimen/dp_30"
        android:layout_marginStart="@dimen/dp_30"
        android:layout_marginTop="@dimen/dp_30"
        android:fontFamily="@font/ikanosans_bold"
        android:text="@string/splash_screen_8"
        android:textColor="@color/text_color_welcome"
        android:textSize="@dimen/sp_21"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tvWelcome" />

    <LinearLayout
        android:id="@+id/ctBottom"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginBottom="@dimen/dp_16"
        android:layout_marginHorizontal="@dimen/dp_30"
        android:layout_marginTop="@dimen/dimen_50dp"
        android:orientation="horizontal"
        android:paddingHorizontal="@dimen/size_13dp"
        android:paddingVertical="@dimen/size_13dp"
        android:weightSum="6"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHeight_percent="0.09"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tvContentAvatar">

        <EditText
            android:id="@+id/edtOTP1"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:inputType="number"
            android:background="@drawable/bg_input_mobile_number"
            android:fontFamily="@font/ikanosans_light"
            android:textAlignment="center"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/edtOTP2"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginStart="@dimen/dimen_8dp"
            android:layout_weight="1"
            android:background="@drawable/bg_input_mobile_number"
            android:fontFamily="@font/ikanosans_light"
            android:textAlignment="center"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/edtOTP3"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginStart="@dimen/dimen_8dp"
            android:layout_weight="1"
            android:background="@drawable/bg_input_mobile_number"
            android:fontFamily="@font/ikanosans_light"
            android:textAlignment="center"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/edtOTP4"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginStart="@dimen/dimen_8dp"
            android:layout_weight="1"
            android:background="@drawable/bg_input_mobile_number"
            android:fontFamily="@font/ikanosans_light"
            android:textAlignment="center"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/edtOTP5"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginStart="@dimen/dimen_8dp"
            android:layout_weight="1"
            android:background="@drawable/bg_input_mobile_number"
            android:fontFamily="@font/ikanosans_light"
            android:textAlignment="center"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/edtOTP6"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginStart="@dimen/dimen_8dp"
            android:layout_weight="1"
            android:background="@drawable/bg_input_mobile_number"
            android:fontFamily="@font/ikanosans_light"
            android:textAlignment="center"
            android:textStyle="bold" />
    </LinearLayout>

    <TextView
        android:id="@+id/tvOpt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginEnd="@dimen/dp_30"
        android:layout_marginStart="@dimen/dp_30"
        android:layout_marginTop="@dimen/size_13dp"
        android:fontFamily="@font/ikanosans_light"
        android:text="@string/an_otp_will_be_sent_to_you"
        android:textColor="@color/text_color_welcome"
        android:textSize="@dimen/sp_16"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/ctBottom" />



</androidx.constraintlayout.widget.ConstraintLayout>