<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/ctLayout">

    <androidx.cardview.widget.CardView
        android:id="@+id/cvRecommend"
        android:visibility="visible"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:layout_marginHorizontal="@dimen/dimen_22dp"
        android:layout_marginVertical="@dimen/dimen_20dp"
        app:cardBackgroundColor="@color/white1"
        app:cardCornerRadius="@dimen/dimen_10dp"
        app:cardElevation="@dimen/dimen_10dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <Button
                android:id="@+id/btnSubmit"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="@dimen/dimen_25dp"
                android:layout_marginTop="@dimen/dimen_25dp"
                android:background="@drawable/primary_button_background_selected"
                android:fontFamily="@font/ikanosans_bold"
                android:text="@string/ipc_submit"
                android:textAllCaps="false"
                app:layout_constraintTop_toBottomOf="@id/sbProgress" />

            <Button
                android:id="@+id/btnSkip"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/dp_36"
                android:layout_marginHorizontal="@dimen/dimen_25dp"
                android:layout_marginTop="@dimen/dp_16"
                android:background="@drawable/secondary_button_background"
                android:fontFamily="@font/ikanosans_bold"
                android:text="@string/ipc_skip"
                android:textAllCaps="false"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintTop_toBottomOf="@id/btnSubmit" />

            <ImageView
                android:id="@+id/imgBtnClose"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_margin="@dimen/dimen_17dp"
                app:layout_constraintDimensionRatio="1:1"
                app:layout_constraintWidth_percent="0.06"
                android:src="@drawable/button_close"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <View
                app:layout_constraintBottom_toBottomOf="@id/sbProgress"
                app:layout_constraintTop_toTopOf="@id/sbProgress"
                app:layout_constraintEnd_toEndOf="@id/sbProgress"
                app:layout_constraintStart_toStartOf="@id/sbProgress"
                android:layout_marginHorizontal="@dimen/dimen_48dp"
                android:background="@drawable/seekbar_shadow"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_11"/>

            <SeekBar
                android:id="@+id/sbProgress"
                android:progress="110"
                android:max="120"
                android:splitTrack="false"
                android:progressBackgroundTint="@color/white"
                android:progressDrawable="@drawable/seekbar_progress"
                android:thumb="@drawable/seekbar_thumb"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_21"
                android:paddingVertical="@dimen/dp_5"
                android:layout_marginBottom="@dimen/dimen_50dp"
                android:layout_marginHorizontal="@dimen/dimen_32dp"
                android:layout_marginTop="@dimen/dimen_15dp"
                app:layout_constraintTop_toBottomOf="@id/tvRating" />

            <TextView
                android:id="@+id/tvTitleConfirm"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="@dimen/dp_21"
                android:layout_marginTop="@dimen/dimen_50dp"
                android:fontFamily="@font/ikanosans_bold"
                android:lineSpacingExtra="@dimen/dp_4"
                android:text="@string/ipc_recommend"
                android:textAlignment="center"
                android:textColor="@color/text_black_color"
                android:textSize="@dimen/sp_30"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/tvDesConfirm"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="@dimen/dimen_70dp"
                android:layout_marginTop="@dimen/size_13dp"
                android:fontFamily="@font/ikanosans_light"
                android:lineSpacingExtra="@dimen/dp_4"
                android:paddingHorizontal="@dimen/dp_26"
                android:text="@string/ipc_content"
                android:textAlignment="center"
                android:textColor="@color/text_black_color"
                android:textSize="@dimen/dimen_16sp"
                android:visibility="visible"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/tvTitleConfirm" />

            <TextView
                android:id="@+id/tvRating"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="30dp"
                android:layout_marginTop="@dimen/dimen_7dp"
                android:fontFamily="@font/ikanosans_bold"
                android:textAlignment="center"
                android:textColor="@color/cobalt"
                android:textSize="@dimen/dimen_14sp"
                android:textStyle="bold"
                app:layout_constraintEnd_toEndOf="@id/animationView"
                app:layout_constraintStart_toStartOf="@id/animationView"
                app:layout_constraintTop_toBottomOf="@id/animationView"
                tools:text="Highly likely" />

            <com.airbnb.lottie.LottieAnimationView
                android:id="@+id/animationView"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_marginTop="@dimen/dimen_37dp"
                app:layout_constraintDimensionRatio="1:1"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/tvDesConfirm"
                app:layout_constraintWidth_percent="0.4"
                app:lottie_autoPlay="false"
                app:lottie_loop="false"
                app:lottie_rawRes="@raw/lottie_02"
                app:lottie_url="REPLACE_JSON_URL" />

        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:id="@+id/cvFeedBack"
        android:visibility="gone"
        android:layout_marginHorizontal="@dimen/dp_29"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="@dimen/dimen_10dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:cardElevation="@dimen/dp_5"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent">
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/tvFeedBack"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="@dimen/dimen_50dp"
                android:layout_marginTop="@dimen/dimen_22dp"
                android:fontFamily="@font/ikanosans_bold"
                android:lineSpacingExtra="@dimen/dp_4"
                android:text="@string/feedback_content"
                android:textAlignment="center"
                android:textColor="@color/text_black_color"
                android:textSize="@dimen/dimen_16sp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                 />
            <Button
                android:id="@+id/btnBack"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/dimen_20dp"
                android:layout_marginHorizontal="@dimen/dimen_24dp"
                android:layout_marginTop="@dimen/dimen_18sp"
                android:background="@drawable/secondary_button_background"
                android:fontFamily="@font/ikanosans_bold"
                android:text="@string/back"
                android:textAllCaps="false"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintTop_toBottomOf="@id/tvFeedBack" />


        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>


</androidx.constraintlayout.widget.ConstraintLayout>