<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout android:id="@+id/ctLayout"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:overScrollMode="always"
    tools:context=".MainActivity">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/ctMiddle"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginBottom="@dimen/dimen_10dp"
        app:layout_constraintBottom_toTopOf="@id/cvBottom"
        app:layout_constraintTop_toTopOf="parent"
        android:visibility="gone">
        <SeekBar
            android:id="@+id/sbProgress"
            style="@style/Widget.AppCompat.ProgressBar.Horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="50dp"
            android:layout_marginTop="10dp"
            app:layout_constraintTop_toBottomOf="@id/tvRating" />
        <TextView
            android:id="@+id/tvRating"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="30dp"
            android:layout_marginTop="10dp"
            android:textAlignment="center"
            android:textSize="12sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="@id/animationView"
            app:layout_constraintStart_toStartOf="@id/animationView"
            app:layout_constraintTop_toBottomOf="@id/animationView"
            tools:text="Highly likely" />
        <com.airbnb.lottie.LottieAnimationView
            android:id="@+id/animationView"
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintDimensionRatio="1:1"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintWidth_percent="0.5"
            app:lottie_autoPlay="false"
            app:lottie_loop="false"
            app:lottie_rawRes="@raw/lottie_02"
            app:lottie_url="REPLACE_JSON_URL" />
    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.cardview.widget.CardView
        android:id="@+id/cvRecommend"
        android:visibility="visible"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:layout_marginHorizontal="@dimen/dimen_22dp"
        android:layout_marginVertical="@dimen/dimen_20dp"
        app:cardBackgroundColor="@color/white1"
        app:cardCornerRadius="@dimen/dimen_10dp"
        app:cardElevation="@dimen/dimen_10dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <Button
                android:id="@+id/btnSubmit"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="@dimen/dimen_25dp"
                android:layout_marginTop="@dimen/dimen_25dp"
                android:background="@drawable/primary_button_background_selected"
                android:fontFamily="@font/ikanosans_bold"
                android:text="@string/ipc_submit"
                android:textAllCaps="false"
                app:layout_constraintTop_toBottomOf="@id/sbProgressNPS" />

            <Button
                android:id="@+id/btnSkip"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/dp_36"
                android:layout_marginHorizontal="@dimen/dimen_25dp"
                android:layout_marginTop="@dimen/dp_16"
                android:background="@drawable/secondary_button_background"
                android:fontFamily="@font/ikanosans_bold"
                android:text="@string/ipc_skip"
                android:textAllCaps="false"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintTop_toBottomOf="@id/btnSubmit" />

            <ImageView
                android:id="@+id/imgBtnClose"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_margin="@dimen/dimen_17dp"
                app:layout_constraintDimensionRatio="1:1"
                app:layout_constraintWidth_percent="0.06"
                android:src="@drawable/button_close"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <View
                android:visibility="visible"
                app:layout_constraintBottom_toBottomOf="@id/sbProgressNPS"
                app:layout_constraintTop_toTopOf="@id/sbProgressNPS"
                app:layout_constraintEnd_toEndOf="@id/sbProgressNPS"
                app:layout_constraintStart_toStartOf="@id/sbProgressNPS"
                android:layout_marginHorizontal="@dimen/dimen_48dp"
                android:background="@drawable/seekbar_shadow"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_11"/>

            <SeekBar
                android:id="@+id/sbProgressNPS"
                android:splitTrack="false"
                android:progressDrawable="@drawable/seekbar_progress"
                android:thumb="@drawable/seekbar_thumb"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_21"
                android:paddingVertical="@dimen/dp_5"
                android:layout_marginBottom="@dimen/dimen_50dp"
                android:layout_marginHorizontal="@dimen/dimen_32dp"
                android:layout_marginTop="@dimen/dimen_15dp"
                app:layout_constraintTop_toBottomOf="@id/tvRatingNPS" />

            <TextView
                android:id="@+id/tvTitleConfirm"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="@dimen/dp_21"
                android:layout_marginTop="@dimen/dimen_50dp"
                android:fontFamily="@font/ikanosans_bold"
                android:lineSpacingExtra="@dimen/dp_4"
                android:text="@string/ipc_recommend"
                android:textAlignment="center"
                android:textColor="@color/text_black_color"
                android:textSize="@dimen/sp_30"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/tvDesConfirm"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="@dimen/dimen_50dp"
                android:layout_marginTop="@dimen/size_13dp"
                android:fontFamily="@font/ikanosans_light"
                android:lineSpacingExtra="@dimen/dp_4"
                android:paddingHorizontal="@dimen/dp_26"
                android:text="@string/ipc_content"
                android:textAlignment="center"
                android:textColor="@color/text_black_color"
                android:textSize="@dimen/dimen_16sp"
                android:visibility="visible"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/tvTitleConfirm" />

            <TextView
                android:id="@+id/tvRatingNPS"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="30dp"
                android:layout_marginTop="@dimen/dimen_7dp"
                android:fontFamily="@font/ikanosans_bold"
                android:textAlignment="center"
                android:textColor="@color/cobalt"
                android:textSize="@dimen/dimen_14sp"
                android:textStyle="bold"
                app:layout_constraintEnd_toEndOf="@id/ctLayoutAnimation"
                app:layout_constraintStart_toStartOf="@id/ctLayoutAnimation"
                app:layout_constraintTop_toBottomOf="@id/ctLayoutAnimation"
                tools:text="Highly likely" />

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/ctLayoutAnimation"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_marginTop="@dimen/dimen_37dp"
                app:layout_constraintDimensionRatio="1:1"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/tvDesConfirm"
                app:layout_constraintWidth_percent="0.4">

                <com.airbnb.lottie.LottieAnimationView
                    android:id="@+id/animationViewNPS"
                    android:visibility="gone"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    app:lottie_autoPlay="false"
                    app:lottie_loop="false"
                    app:lottie_rawRes="@raw/humans"
                    app:lottie_url="REPLACE_JSON_URL" />

                <com.airbnb.lottie.LottieAnimationView
                    android:id="@+id/animationViewNPSTest"
                    android:visibility="visible"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    tools:srcCompat="@drawable/ic_logo"
                    app:lottie_autoPlay="true"
                    app:lottie_loop="true"
                    app:lottie_rawRes="@raw/nps_file"
                    app:lottie_url="REPLACE_JSON_URL" />
            </androidx.constraintlayout.widget.ConstraintLayout>





        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>


    <androidx.cardview.widget.CardView
        android:id="@+id/cvBottom"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/dimen_10dp"
        android:layout_marginHorizontal="@dimen/dimen_10dp"
        android:layout_width="match_parent"
        app:cardCornerRadius="@dimen/dp_41"
        app:cardElevation="@dimen/dp_5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent">

        <LinearLayout
            android:orientation="horizontal"
            android:layout_margin="@dimen/dp_5"
            android:id="@+id/ctBottom"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_38">

            <TextView
                android:id="@+id/tvShowDialog"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/tab_color_selector"
                android:fontFamily="@font/ikanosans_bold"
                android:gravity="center"
                android:text="@string/show_dialog"
                android:textAlignment="center"
                android:textColor="@color/cobalt_second"
                android:textSize="@dimen/dimen_16sp" />

            <TextView
                android:id="@+id/tvShowSmiley"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:fontFamily="@font/ikanosans_bold"
                android:gravity="center"
                android:text="@string/show_smiley"
                android:textAlignment="center"
                android:textColor="@color/cobalt_second"
                android:textSize="@dimen/dimen_16sp" />

            <TextView
                android:id="@+id/tvShowUpdate"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:fontFamily="@font/ikanosans_bold"
                android:gravity="center"
                android:text="@string/show_update"
                android:textAlignment="center"
                android:textColor="@color/cobalt_second"
                android:textSize="@dimen/dimen_16sp" />

        </LinearLayout>





    </androidx.cardview.widget.CardView>


</androidx.constraintlayout.widget.ConstraintLayout>