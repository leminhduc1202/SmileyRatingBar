<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@color/white">

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:orientation="horizontal"
        app:layout_constraintGuide_begin="434dp" />

    <ImageView
        android:id="@+id/imgSplashContent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/size_13dp"
        android:layout_marginHorizontal="@dimen/dp_34"
        app:layout_constraintBottom_toTopOf="@id/tvSplashContent"
        tools:src="@drawable/ic_hey" />

    <ImageView
        android:id="@+id/imgSplashUSP1"
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:scaleType="fitCenter"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:src="@drawable/ic_background_splash_usp1" />

    <TextView
        android:id="@+id/tvSplashContent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="@dimen/dp_34"
        android:fontFamily="@font/ikanosans_bold"
        tools:text="@string/well_come"
        android:textColor="@color/blue_main_color"
        android:textSize="@dimen/sp_50"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tvSplashContentUsp2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="@dimen/dp_34"
        android:fontFamily="@font/ikanosans_bold"
        android:textColor="@color/blue_main_color"
        android:textSize="@dimen/sp40"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="@id/guideline"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        tools:text="@string/splash_screen_content_usp2" />
    <TextView
        android:id="@+id/tvSplashContentUsp3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="@dimen/dp_34"
        android:fontFamily="@font/ikanosans_bold"
        android:textColor="@color/blue_main_color"
        android:textSize="@dimen/sp40"
        android:visibility="gone"
        app:layout_constraintTop_toTopOf="@id/guideline"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        tools:text="@string/splash_screen_content_usp3" />

    <ImageView
        android:id="@+id/imgSplashUSP2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_60"
        android:scaleType="centerCrop"
        android:visibility="gone"
        app:layout_constraintTop_toBottomOf="@id/guideline"
        tools:src="@drawable/ic_background_splash_usp2" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/ctLayoutAnimation"
        app:layout_constraintTop_toBottomOf="@id/tvSplashContent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_150">
        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/guiLineLottie"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_1"
            android:orientation="vertical"
            app:layout_constraintGuide_percent="0.5"/>

        <com.airbnb.lottie.LottieAnimationView
            android:id="@+id/lottieShapeAnimation"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginTop="@dimen/dp_16"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:lottie_rawRes="@raw/triangle_orange"
            app:lottie_loop="true"
            app:lottie_autoPlay="true"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_200"/>

        <com.airbnb.lottie.LottieAnimationView
            android:id="@+id/lottieExpressionAnimation"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="@dimen/dp_38"
            app:lottie_rawRes="@raw/expression_laugh"
            app:lottie_loop="true"
            app:lottie_autoPlay="true"
            android:layout_width="@dimen/dimen_45dp"
            android:layout_height="@dimen/dimen_45dp"/>
        <ImageView
            android:id="@+id/imgHead"
            android:src="@drawable/accessories_head_beauty"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_width="@dimen/dimen_55dp"
            android:layout_height="@dimen/dimen_55dp"/>
        <ImageView
            android:id="@+id/imgLeft"
            android:src="@drawable/accessories_left_books"
            android:layout_marginEnd="@dimen/dimen_50dp"
            app:layout_constraintEnd_toStartOf="@id/guiLineLottie"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_width="@dimen/dimen_55dp"
            android:layout_height="@dimen/dimen_55dp"/>
        <ImageView
            android:id="@+id/imgRight"
            android:src="@drawable/accessories_right_arts_crafts"
            android:layout_marginStart="@dimen/dimen_50dp"
            app:layout_constraintStart_toEndOf="@id/guiLineLottie"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_width="@dimen/dimen_55dp"
            android:layout_height="@dimen/dimen_55dp"/>
    </androidx.constraintlayout.widget.ConstraintLayout>



</androidx.constraintlayout.widget.ConstraintLayout>