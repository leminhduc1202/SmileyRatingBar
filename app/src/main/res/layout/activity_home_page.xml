<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ipcupdate.ui.homepage.HomePageActivity"
    android:background="@color/white">


    <androidx.viewpager2.widget.ViewPager2
        android:id="@+id/vpPager"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintBottom_toTopOf="@id/lnRoot"
        app:layout_constraintTop_toTopOf="parent" />

    <View
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toTopOf="@id/lnRoot"
        style="@style/ViewLine" />

    <LinearLayout
        android:id="@+id/lnRoot"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:baselineAligned="false"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHeight_percent="0.09">

        <RelativeLayout
            android:id="@+id/tabHome"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1">

            <ImageView
                android:id="@+id/imgHome"
                android:layout_width="@dimen/dp_26"
                android:layout_height="@dimen/dp_26"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="@dimen/dimen_10dp"
                android:background="?selectableItemBackgroundBorderless"
                android:scaleType="centerInside"
                android:src="@drawable/bg_home_selector" />

            <TextView
                android:id="@+id/tvHome"
                style="@style/TextViewNavigationBar"
                android:text="@string/navigation_home" />

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/tabDiscover"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center_horizontal">

            <ImageView
                android:id="@+id/imgDiscover"
                android:layout_width="@dimen/dp_26"
                android:layout_height="@dimen/dp_26"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="@dimen/dimen_10dp"
                android:background="?selectableItemBackgroundBorderless"
                android:scaleType="centerInside"
                android:src="@drawable/bg_discover_selector" />

            <TextView
                android:id="@+id/tvDiscover"
                style="@style/TextViewNavigationBar"
                android:text="@string/navigation_discover" />

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/tabFacilities"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:visibility="visible">

            <ImageView
                android:id="@+id/imgFacilities"
                android:layout_width="@dimen/dp_26"
                android:layout_height="@dimen/dp_26"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="@dimen/dimen_10dp"
                android:background="?selectableItemBackgroundBorderless"
                android:scaleType="centerInside"
                android:src="@drawable/bg_facilities_selector" />

            <TextView
                android:id="@+id/tvFacilities"
                style="@style/TextViewNavigationBar"
                android:text="@string/navigation_facilities" />

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/tabRewards"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1">

            <ImageView
                android:id="@+id/imgRewards"
                android:layout_width="@dimen/dp_26"
                android:layout_height="@dimen/dp_26"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="@dimen/dimen_10dp"
                android:background="?selectableItemBackgroundBorderless"
                android:scaleType="centerInside"
                android:src="@drawable/bg_rewards_selector" />

            <TextView

                android:id="@+id/tvNotificationNotifi"
                style="@style/TvNotificationNavigationBar"
                android:layout_toRightOf="@id/imgRewards"
                android:visibility="gone" />

            <TextView
                android:id="@+id/tvRewards"
                style="@style/TextViewNavigationBar"
                android:layout_centerInParent="true"
                android:text="@string/navigation_rewards" />

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/tabProfile"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1">

            <ImageView
                android:id="@+id/imgProfile"
                android:layout_width="@dimen/dp_26"
                android:layout_height="@dimen/dp_26"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="@dimen/dimen_10dp"
                android:background="?selectableItemBackgroundBorderless"
                android:scaleType="centerInside"
                android:src="@drawable/bg_profile_selector" />

            <TextView
                android:id="@+id/tvProfile"
                style="@style/TextViewNavigationBar"
                android:text="@string/navigation_profile" />


            <View
                android:id="@+id/viewDotProfile"
                android:layout_width="@dimen/dimen_6dp"
                android:layout_height="@dimen/dimen_6dp"
                android:layout_alignTop="@id/imgProfile"
                android:layout_marginStart="@dimen/dp_3_negative"
                android:layout_marginTop="@dimen/dp_3_negative"
                android:layout_toEndOf="@id/imgProfile"
                android:background="@drawable/bg_dot_red"
                android:visibility="gone"
                tools:visibility="visible" />
        </RelativeLayout>
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>